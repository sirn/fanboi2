{% macro render_post(post) -%}
<div>
    <div class="flex flex-col mx-auto max-w-5xl py-4 px-4 gap-2 overflow-x-scroll">
        <div class="inline-flex leading-6 items-center text-sm gap-2">
            <div class="bg-porcelain-500 text-white px-1 rounded-sm font-bold dark:bg-slate-700 dark:text-porcelain-300">{{ post.number }}</div>
            <div class="bg-white text-porcelain-500 px-2 rounded-sm font-bold dark:bg-slate-900 dark:text-porcelain-300">{{ post.name }}</div>
            <div class="hidden text-porcelain-500 font-bold md:block">{{ post.created_at | datetime }}</div>
            <div class="text-porcelain-500 font-bold {{ post | format_post_ident_class }}">{{ post | format_post_ident }}</div>
        </div>
        <div class="post text-gray-700 leading-6 dark:text-slate-300">
            {{ post | format_post }}
        </div>
        <div class="inline-flex items-center text-sm gap-2 md:hidden">
            <div class="text-porcelain-500 font-normal italic">Posted {{ post.created_at | datetime }}</div>
        </div>
    </div>
</div>
{%- endmacro %}

{% macro render_post_container() -%}
<div class="bg-porcelain-100 divide-y divide-white dark:bg-slate-800 dark:divide-slate-900">
    {{ caller() }}
</div>
{%- endmacro %}
