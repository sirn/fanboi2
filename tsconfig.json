{
  "compilerOptions": {
    "rootDir": ".",
    "strict": false,
    "module": "esnext",
    "target": "es5",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "."
  },
  "include": ["assets/**/*.ts"],
  "exclude": ["node_modules"]
}
